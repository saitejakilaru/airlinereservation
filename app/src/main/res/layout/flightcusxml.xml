<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listpage"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">


<ImageView
    android:id="@+id/flilogo"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginLeft="10dp"
    android:src="@drawable/spice"
    android:layout_marginTop="5dp"
    android:focusableInTouchMode="false"
    android:clickable="false"
    android:focusable="false"/>

            <TextView
            android:id="@+id/flicomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Flight name"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
            android:layout_below="@+id/flilogo"
            android:textColor="#1d1b1b"
            android:fontFamily="sans-serif-condensed"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:focusable="false"/>



        <TextView
            android:id="@+id/fliname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_below="@+id/flilogo"
            android:textColor="#1d1b1b"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:layout_toRightOf="@+id/flicomp"
            android:fontFamily="sans-serif-condensed"/>



        <TextView
            android:id="@+id/dtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="true"
             tools:text="depart"
            android:textSize="20dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/flilogo"
            android:textColor="#1d1b1b"
            android:layout_marginLeft="60dp"
            android:fontFamily="sans-serif-condensed"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/dtime"
            android:background="@drawable/depart"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"/>



        <TextView
            android:id="@+id/atime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="true"
            tools:text="arriv"
            android:textSize="20dp"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/cost"
            android:layout_marginRight="60dp"
            android:textColor="#1d1b1b"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:fontFamily="sans-serif-condensed"/>
<ImageButton
    android:id="@+id/save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_toLeftOf="@+id/cost"
    android:layout_marginTop="15dp"
    android:visibility="gone"
    android:layout_marginRight="20dp"
    android:background="@drawable/rtrip"

    />


        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:text="Rs.4000"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#1d1b1b"
            android:fontFamily="sans-serif-condensed"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/flilogo"
            android:background="@android:color/darker_gray"></View>

    </RelativeLayout>


</LinearLayout>