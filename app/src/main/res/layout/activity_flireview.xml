<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kolip.swift.flireview">



    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rotate" />

            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight Review"
                android:textColor="#1a0101"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginLeft="180dp"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">



                    <ImageView
                        android:id="@+id/revfliimg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/revflicomp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight Comp"
                        android:textColor="#1a0101"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:layout_toRightOf="@+id/revfliimg"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/revfliname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight Name"
                        android:textColor="#1a0101"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/revflicomp"
                        android:layout_centerVertical="true"
                        android:fontFamily="sans-serif-condensed"
                       />


</RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/cardclr1">

                    <TextView
                        android:id="@+id/dptcity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="false"
                        android:text="Depart city"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textAllCaps="true"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-condensed"/>


                    <ImageButton
                        android:id="@+id/cc1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/dptcity1"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/depart"
                        android:backgroundTint="#ffffff"/>



                    <TextView
                        android:id="@+id/dstcity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cc1"
                        android:text="Destination city"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"/>



                    <TextView
                        android:id="@+id/dd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="43dp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 stops"
                        android:layout_toRightOf="@+id/dd1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="43dp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-condensed"/>



                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/stop"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="43dp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-condensed"/>




                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">


                        <TextView
                            android:id="@+id/d1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Date"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/d2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Date"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tm1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="65dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="time"
                            android:textColor="#1a0101"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/tm2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="65dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="time"
                            android:textColor="#1a0101"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/imv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/rotate1" />

                        <ImageView
                            android:id="@+id/imv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/imv"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:src="@drawable/rotate" />


                        <TextView
                            android:id="@+id/city1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="105dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="depart city"
                            android:textColor="#1a0101"
                            android:textAllCaps="true"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/city2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="105dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="dest city"
                            android:textColor="#1a0101"
                            android:textSize="18dp"
                            android:textAllCaps="true"/>


                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/policy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rules"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancellation and Baggage Policies"
        android:textColor="#1a0101"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="40dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/keyarrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>


</RelativeLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/baggage">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Meal and Extra Baggage"
                        android:textColor="#1a0101"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="40dp"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/keyarrow"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="20dp"/>


                </RelativeLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"

                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/promo"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:hint="PROMO CODE"
                        android:textColor="#1a0101"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="10dp"/>



                    <TextView
                        android:id="@+id/apply"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPLY"
                        android:layout_centerVertical="true"
                       android:textColor="@color/colorAccent"
                        android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/promo"
                        android:textSize="18dp"

                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="15dp"/>

                    <ImageButton
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/apply"
                        android:background="@drawable/edit"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"

                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Payable (inc taxes)"
                        android:textColor="#1a0101"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginLeft="20dp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/r1"
                        android:layout_toLeftOf="@+id/fare"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:text="Fare"
                        android:textSize="18dp"
                        android:textColor="#1a0101"
                        android:fontFamily="sans-serif-condensed"/>



                </RelativeLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginTop="30dp">


    <android.support.v7.widget.CardView
        android:layout_width="190dp"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/butsav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save booking"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:fontFamily="sans-serif-condensed"

            android:background="#08c0ed"/>


    </RelativeLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SET GO"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/swipeclr"
                />




        </RelativeLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>
    </LinearLayout>
    </ScrollView>
        </LinearLayout>
